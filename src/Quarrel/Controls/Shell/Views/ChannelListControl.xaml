    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="48"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid>
            <!--Guild Button (Guild channel header)-->
            <channelcontrols:ChannelListHeader Visibility="{x:Bind Mode=OneWay, Path=baseconvert:NotBoolToVisibilityConverter.Convert(ViewModel.CurrentGuild.IsDM)}"
                                                       DataContext="{x:Bind ViewModel.CurrentGuild, Mode=OneWay}"/>

            <!--Friend Button (DM channel header)-->
            <ToggleButton Style="{StaticResource FriendsButtonStyle}" Visibility="{x:Bind ViewModel.CurrentGuild.IsDM, Mode=OneWay}" HorizontalAlignment="Stretch" HorizontalContentAlignment="Left"
                                  IsChecked="{x:Bind baseconvert:NullToBoolConverter.Convert(ViewModel.CurrentChannel), Mode=OneWay, FallbackValue=True}" Height="48" Background="Transparent"
                                  Command="{x:Bind ViewModel.NavigateToFriends}">
                <Viewbox MaxHeight="24">
                    <TextBlock x:Uid="/Controls/FriendsTB" Text="Friends" Foreground="{ThemeResource Foreground}" FontSize="18" Margin="12,0,0,0"/>
                </Viewbox>
            </ToggleButton>
        </Grid>

        <!--List of channels-->
        <ListView x:Name="ChannelList"
                  Grid.Row="1"
                  ItemsSource="{x:Bind ViewModel.CurrentGuild.Channels, Mode=OneWay}"
                  ItemContainerStyle="{StaticResource ChannelListItemStyle}"
                  IsItemClickEnabled="True"
                  ItemTemplateSelector="{StaticResource ChannelTemplateSelector}"
                  SelectionMode="None"
                  helpers:ItemClickCommand.Command="{x:Bind ViewModel.NavigateChannelCommand}"/>

    </Grid>
</UserControl>
